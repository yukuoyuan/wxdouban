/*头像和日期  */

.article_list_author {
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 10px;
}

/*头像  */

.article_list_author_avatar {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

/*日期  */

.article_list_author_date {
  margin-left: 20px;
  vertical-align: middle;
}

.title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}

/*详情图片  */

.article_list_details_img {
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}

/*详情描述  */

.article_list_details_text {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

/*评论和点赞  */

.article_list_like {
  font-size: 13px;
  line-height: 16px;
  margin-left: 10px;
}

/*评论图标  */

.article_list_like_star_chat_icon {
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}

/*评论字体  */

.article_list_like_star_chat_text {
  vertical-align: middle;
  margin-right: 20px;
}
